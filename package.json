{
  "name": "@ha/chat-customer",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/styles.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build:js": "vite build",
    "build": "npm run clean && npm run build:js",
    "prepublishOnly": "npm run build",
    "pack:local": "npm run build && npm pack",
    "pack:dry": "npm run build && npm pack --dry-run"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "firebase": ">=10"
  },
  "dependencies": {
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "vite": "^6.3.5"
  }
}
